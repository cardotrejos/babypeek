{
  "name": "3d-ultra",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "hono": "^4.8.2"
    }
  },
  "type": "module",
  "scripts": {
    "check": "oxlint && oxfmt --write",
    "lint": "oxlint",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @3d-ultra/db db:push",
    "db:studio": "turbo -F @3d-ultra/db db:studio",
    "db:generate": "turbo -F @3d-ultra/db db:generate",
    "db:migrate": "turbo -F @3d-ultra/db db:migrate",
    "db:start": "turbo -F @3d-ultra/db db:start",
    "db:watch": "turbo -F @3d-ultra/db db:watch",
    "db:stop": "turbo -F @3d-ultra/db db:stop",
    "db:down": "turbo -F @3d-ultra/db db:down",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@effect/schema": "^0.75.5",
    "dotenv": "catalog:",
    "effect": "^3.19.13",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/bun": "catalog:",
    "@vitest/coverage-v8": "^4.0.16",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.34.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "vitest": "^4.0.16"
  },
  "packageManager": "bun@1.3.5"
}
