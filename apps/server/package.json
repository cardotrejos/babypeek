    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "hono": "^4.8.2",
    "@orpc/server": "^1.12.2",
    "@orpc/openapi": "^1.12.2",
    "@orpc/zod": "^1.12.2",
    "better-auth": "^1.4.7"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4"
  }
}
